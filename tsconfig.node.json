{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2021",
    "rootDir": "./src",

    /* Module settings for Node.js */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": false,
    /* Override settings for Node.js build */
    "noEmit": false,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
